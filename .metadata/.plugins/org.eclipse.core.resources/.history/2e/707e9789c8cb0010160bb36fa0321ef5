package eserciziProgrammazioneStrutturata;

import java.util.Scanner;

public class Esercizio1 {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		
		System.out.print("Insert a number n: ");
		int n = s.nextInt();
		
		System.out.print("Insert a number k: ");
		int k = s.nextInt();
		
		if (n < 0 | k < 0 ) {
			System.out.println("Insert only positive numbers");
		} else {
			int sum = 1;
			for (int i = 0; i < k; i++) {
				sum *= n;
			}
			System.out.print("Result " + sum);
		}
		
		s.close(); 
	}

}
