package traghetto;

public abstract class Veicolo implements Tariffabile {
	private String targa;
	private int num_pers;
	private TipoAuto tipo;
	
	public Veicolo(String targa, int num_pers, TipoAuto tipo) throws IllegalAccessException {
		this.targa = targa;
		this.tipo = tipo;
		if (num_pers <= 0 ) {
			throw new IllegalAccessException("num_pers non puo essere < 0");
		}
		this.num_pers = num_pers;
	}

	public String getTarga() {
		return targa;
	}

	public int getNum_pers() {
		return num_pers;
	}

	public TipoAuto getTipo() {
		return tipo;
	}
	
	
	
}
