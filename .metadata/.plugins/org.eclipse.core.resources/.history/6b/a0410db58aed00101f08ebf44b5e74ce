package bankAccount;

import java.time.LocalDate;

public class Main {

	public static void main(String[] args) {
		
		// la banca ha un nome e un capitale iniziale
		Bank fineco = new Bank("Fineco", 200.000);
		
		// test bankAccount
		BankAccount luca = new BankAccount("Luca");
		BankAccount pier = new BankAccount("Pier", 250.50);
		
		// toString();
		System.out.println(luca);
		System.out.println(pier);
		
		// handleMovement + test classe movement
		
		luca.handleMovement(new Movement(Type.deposit, LocalDate.now(), 125.0));
		pier.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 50.5));
		
		// controllo errore
		// luca.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 150.0));
		System.out.println(luca);
		System.out.println(pier);
		
		luca.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 15.0));
		luca.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 45.0));
		luca.handleMovement(new Movement(Type.deposit, LocalDate.now(), 75.0));
		luca.handleMovement(new Movement(Type.deposit, LocalDate.now(), 25.0));
		luca.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 55.5));
		
		// test checkBalance
		System.out.println(luca.checkBalance());
		
		// test show movementList
		luca.showMovementList();
		
		// test saving account
		SavingAccount tiziano = new SavingAccount("tiziano", 0.02, 2);
		SavingAccount lorenzo = new SavingAccount("lorenzo", 100.0, 0.03, 2);
		
		System.out.println(tiziano);
		System.out.println(lorenzo);
		
		tiziano.handleMovement(new Movement(Type.deposit, LocalDate.now(), 340.0));
		System.out.println(tiziano);
		tiziano.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 40.0));
		tiziano.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 30.0));
		
		// blocco massimo di 2 trasazioni in un giorno
		// tiziano.handleMovement(new Movement(Type.withdrawal, LocalDate.now(), 40.0));
		
		tiziano.handleMovement(new Movement(Type.withdrawal, LocalDate.of(2024, 10, 8), 40.0));
		
		
		
		

	}

}
